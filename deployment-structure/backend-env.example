# Laravel Backend Environment Variables for Laravel Cloud

APP_NAME="LMS Backend"
APP_ENV=production
APP_KEY=base64:your-app-key-here
APP_DEBUG=false
APP_URL=https://your-laravel-cloud-app.dev

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database (Laravel Cloud will configure this)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=your_database
DB_USERNAME=your_username
DB_PASSWORD=your_password

# Cache & Sessions (Laravel Cloud will configure this)
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# CORS Configuration for Frontend
FRONTEND_URL=https://your-frontend-domain.vercel.app
SANCTUM_STATEFUL_DOMAINS=your-frontend-domain.vercel.app
SESSION_DOMAIN=.your-frontend-domain.vercel.app

# Sanctum
SANCTUM_GUARD=api

# Additional Security
SECURE_COOKIES=true
SESSION_SECURE_COOKIE=true